<div class="w-full p-4">
  <div class="relative w-full aspect-video rounded-xl overflow-hidden shadow-lg group">
    <!-- 轮播容器 -->
    <div
      class="relative w-full h-full overflow-hidden rounded-xl"
      id="swiper-container"
    >
      <!-- 轮播项1 -->
      <div
        class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-100 swiper-slide"
        data-slide="0"
      >
        <img
          src="/images/05.jpg"
          alt="起司的学习日常"
          class="w-full h-full object-cover rounded-xl"
        />
      </div>

      <!-- 轮播项2 -->
      <div
        class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0 swiper-slide"
        data-slide="1"
      >
        <img
          src="/images/07.jpg"
          alt="窗边的思考时间"
          class="w-full h-full object-cover rounded-xl"
        />
      </div>

      <!-- 轮播项3 -->
      <div
        class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0 swiper-slide"
        data-slide="2"
      >
        <img
          src="/images/09.jpg"
          alt="放松时刻"
          class="w-full h-full object-cover rounded-xl"
        />
      </div>

      <!-- 轮播项4 -->
      <div
        class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0 swiper-slide"
        data-slide="3"
      >
        <img
          src="/images/11.jpg"
          alt="探索新环境"
          class="w-full h-full object-cover rounded-xl"
        />
      </div>
    </div>

    <!-- 分页指示器 -->
    <div
      class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2"
      id="swiper-pagination"
    >
      <button
        class="w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-100 transition-all pagination-dot active"
        data-slide="0"></button>
      <button
        class="w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-100 transition-all pagination-dot"
        data-slide="1"></button>
      <button
        class="w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-100 transition-all pagination-dot"
        data-slide="2"></button>
      <button
        class="w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-100 transition-all pagination-dot"
        data-slide="3"></button>
    </div>

    <!-- 导航按钮 -->
    <button
      class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-100 rounded-full p-2 transition-all opacity-0 group-hover:opacity-100 md:opacity-100 swiper-button-prev"
    >
      <svg
        class="w-6 h-6 text-gray-800"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
    <button
      class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-100 rounded-full p-2 transition-all opacity-0 group-hover:opacity-100 md:opacity-100 swiper-button-next"
    >
      <svg
        class="w-6 h-6 text-gray-800"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
</div>

<script>
  // 自动轮播功能
  let currentSlide = 0;
  const totalSlides = 4;
  const slideInterval = 5000; // 5秒切换一次
  let slideTimer;

  // 获取所有轮播项和分页点
  const slides = document.querySelectorAll(".swiper-slide");
  const paginationDots = document.querySelectorAll(".pagination-dot");
  const prevButton = document.querySelector(".swiper-button-prev");
  const nextButton = document.querySelector(".swiper-button-next");

  // 显示指定的轮播项
  function showSlide(index) {
    // 隐藏所有轮播项
    slides.forEach((slide) => {
      slide.classList.remove("opacity-100");
      slide.classList.add("opacity-0");
    });

    // 显示当前轮播项
    slides[index].classList.remove("opacity-0");
    slides[index].classList.add("opacity-100");

    // 更新分页点状态
    paginationDots.forEach((dot) => {
      dot.classList.remove("active", "bg-opacity-100");
      dot.classList.add("bg-opacity-50");
    });

    paginationDots[index].classList.remove("bg-opacity-50");
    paginationDots[index].classList.add("active", "bg-opacity-100");

    // 更新当前轮播项索引
    currentSlide = index;
  }

  // 切换到下一张
  function nextSlide() {
    const nextIndex = (currentSlide + 1) % totalSlides;
    showSlide(nextIndex);
  }

  // 切换到上一张
  function prevSlide() {
    const prevIndex = (currentSlide - 1 + totalSlides) % totalSlides;
    showSlide(prevIndex);
  }

  // 开始自动轮播
  function startSlideShow() {
    slideTimer = setInterval(nextSlide, slideInterval);
  }

  // 停止自动轮播
  function stopSlideShow() {
    clearInterval(slideTimer);
  }

  // 为分页点添加点击事件
  paginationDots.forEach((dot) => {
    dot.addEventListener("click", () => {
      const slideIndex = parseInt(dot.getAttribute("data-slide"));
      showSlide(slideIndex);
      stopSlideShow();
      startSlideShow();
    });
  });

  // 为导航按钮添加点击事件
  if (prevButton) {
    prevButton.addEventListener("click", () => {
      prevSlide();
      stopSlideShow();
      startSlideShow();
    });
  }

  if (nextButton) {
    nextButton.addEventListener("click", () => {
      nextSlide();
      stopSlideShow();
      startSlideShow();
    });
  }

  // 鼠标悬停时暂停自动轮播
  const swiperContainer = document.getElementById("swiper-container");
  if (swiperContainer) {
    swiperContainer.addEventListener("mouseenter", stopSlideShow);
    swiperContainer.addEventListener("mouseleave", startSlideShow);
  }

  // 初始化自动轮播
  startSlideShow();
</script>
